<h1>Listing words</h1>

<table>
  <tr>
    <th>Gematria value</th>
    <th>Gematria word</th>
    <th>Gematria desc</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.gematria_value %></td>
    <td><%= word.gematria_word %></td>
    <td><%= word.gematria_desc %></td>
    <td><%= word.user_id %></td>
    <td><%= link_to 'Show', word %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

